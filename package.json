{
  "name": "hexagon-generator",
  "version": "1.0.0",
  "description": "",
  "source": "html/index.html",
  "scripts": {
    "architecture": "madge --extensions ts,tsx --exclude \"^.*\\.(test\\.(ts|tsx)|css)$\" --image graph.svg src/",
    "dev": "vite",
    "build": "tsc && vite build",
    "format:check": "prettier --check src",
    "format:fix": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "preview": "vite preview",
    "prepare": "husky install",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:all": "jest --watchAll --verbose",
    "type:check": "tsc"
  },
  "keywords": [
    "typescript",
    "html5",
    "css3",
    "webpack"
  ],
  "author": "WV",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "^1.3.44",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "git-commit-msg-linter": "^4.11.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.5.0",
    "madge": "^6.1.0",
    "prettier": "^2.8.8",
    "ts-jest": "^27.1.5",
    "typescript": "^4.9.5",
    "vite": "^4.4.9"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
